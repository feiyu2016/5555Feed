<resources>

    <!-- Default theme for the application -->
    <style name="DefaultTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar_Style</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBar_Overflow</item>
        <item name="android:itemTextAppearance">@style/Text_Style_Medium</item>
        <item name="android:itemBackground">@color/bg_drawer_item</item>
        <item name="android:textAppearanceSmall">@style/Text_Style_Small</item>
        <item name="android:textAppearanceMedium">@style/Text_Style_Medium</item>
        <item name="android:textAppearanceLarge">@style/Text_Style_Large</item>
        <item name="android:textColorPrimary">#FF000000</item>
        <item name="android:textColorSecondary">#FF878787</item>
        <item name="android:selectableItemBackground">@color/bg_ab_item</item>
    </style>

    <!-- Styles for the Action Bar -->
    <style name="ActionBar_Style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:height">56dp</item>
        <item name="android:background">@drawable/bg_action_bar</item>
        <item name="android:titleTextStyle">@style/ActionBar_Title</item>
    </style>

    <style name="ActionBar_Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/accent_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionBar_Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <!-- Custom TextStyles -->
    <style name="Text_Style_Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF878787</item>
    </style>

    <style name="Text_Style_Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="Text_Style_Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <!-- Popup styles -->
    <style name="Button_Popup">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@color/btn_popup</item>
        <item name="android:textColor">@color/accent_text</item>
    </style>

</resources>
