<!-- The PreferenceScreen for the application. -->
<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Preference for textsize. -->
    <ListPreference
        android:key="preference_textsize"
        android:title="@string/preference_textsize_title"
        android:summary="@string/preference_textsize_summary"
        android:entries="@array/preference_textsize_entries"
        android:entryValues="@array/preference_textsize_entries"
        android:defaultValue="Medium"
        android:dialogTitle="" />

    <!-- Preference for whether to open links in the app
         or in the default browser. -->
    <CheckBoxPreference
        android:key="preference_open_in"
        android:title="@string/preference_open_in_title"
        android:summary="@string/preference_open_in_summary"
        android:defaultValue="true" />

    <!-- Preference for whether to download images or not -->
    <CheckBoxPreference
        android:key="preference_images"
        android:title="@string/preference_images_title"
        android:summary="@string/preference_images_summary"
        android:defaultValue="true" />

</PreferenceScreen>
