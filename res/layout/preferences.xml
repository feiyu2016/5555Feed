<!-- The PreferenceScreen for the application. -->
<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/preference_category_general" />

    <!-- Preference for whether to open links in the app
         or in the default browser. -->
    <CheckBoxPreference
        android:key="preference_open_in"
        android:title="@string/preference_open_in_title"
        android:summary="@string/preference_open_in_summary"
        android:defaultValue="true" />

    <!-- Preference for whether to download images or not -->
    <CheckBoxPreference
        android:key="preference_images"
        android:title="@string/preference_images_title"
        android:summary="@string/preference_images_summary"
        android:defaultValue="true" />

    <PreferenceCategory
        android:title="@string/preference_category_clean_up" />

    <!-- The option to clear the table/list of 'read' items -->
    <Preference
        android:key="preference_clear_read"
        android:title="@string/preference_clear_read_title"
        android:summary="@string/preference_clear_read_summary" />

</PreferenceScreen>
